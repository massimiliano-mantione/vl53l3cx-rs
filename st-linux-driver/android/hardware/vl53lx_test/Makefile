CC=arm-linux-gnueabihf-gcc

CFLAGS=-O0 -g -Wall
CPPFLAGS=-I$(DRIVER_DIR) -I$(DRIVER_DIR)/inc
LDLIBS=-lrt

PHIO_BIN:=phio
PHIO_OBJS:=phio.o

VL53LX_REG_BIN:=vl53lx_reg
VL53LX_REG_OBJS:=vl53lx_reg.o

VL53LX_IOTEST_BIN:=vl53lx_iotest
VL53LX_IOTEST_OBJS:=vl53lx_iotest.o

all: $(PHIO_BIN) $(VL53LX_REG_BIN) $(VL53LX_IOTEST_BIN)

clean:
	rm -f $(PHIO_BIN) $(PHIO_OBJS) $(VL53LX_REG_BIN) $(VL53LX_REG_OBJS) $(VL53LX_IOTEST_BIN) $(VL53LX_IOTEST_OBJS)

$(VL53LX_IOTEST_BIN): $(VL53LX_IOTEST_OBJS)

$(VL53LX_REG_BIN): $(VL53LX_REG_OBJS)

$(PHIO_BIN): $(PHIO_OBJS)
